from collections import defaultdict
mpp=defaultdict(int)
room=1
while(True):
    print("1.Allocate\n2.status\n3.Exit")
    option=int(input("enter your option:"))
    id=input("ENTER YOUR ID:")
    maplen=len(mpp)
    if(option==1):
        if(mpp[id]!=0):
            print("already booked")
            continue
        elif(maplen==2):
            print("NO ROOMS AVILABLE")
            continue
        mpp[id]=room
        print("room Allocated to",id,":Room",room)
        room+=1
    elif(option==2):
        available=2-maplen
        print("Avilable Rooms:",available)
    elif(option==3):
        break
    else:
        print("Enter A valid number")
